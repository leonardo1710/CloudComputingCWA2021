/**
 * Custom Styles here.
 *
 * refï¼šhttps://v1.vuepress.vuejs.org/config/#index-styl
 */

.home .hero img
  max-width 450px!important

div.theme-default-content:not(.custom) {
  max-width: 80%;
}

.page {
  font-size 1.2em
}

.page img{
  display: block;
}

.home img{
  display: block
  margin-left: auto;
  margin-right: auto;
  width: 50%;
}

.column {
  float: left;
  width: 33.3%;
}

/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}


.card-column {
  float: left;
  width: 50%;
}

/* Display the columns below each other instead of side by side on small screens */
@media screen and (max-width: 650px) {
  .column {
    width: 100%;
    display: block;
  }
}

/* Add some shadows to create a card effect */
.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  margin: 3em 3em;
}

.img-container img {
    max-width: 100%;
    height: auto;
}

.img-container {
    width: 250px;
    min-height: 120px;
    max-height: auto;
    margin: 3px;
    padding: 3px;
    display:block;
}

/* Some left and right padding inside the container */
.container {
  padding: 1em 1em;
}

/* Clear floats */
.container::after, .row::after {
  content: "";
  clear: both;
  display: table;
}

.title {
  color: grey;
}

.card a {
  border: none;
  outline: 0;
  display: inline-block;
  padding: 8px;
  color: white;
  background-color: #000;
  text-align: center;
  cursor: pointer;
  width: 95%;
}

.card a:hover {
  background-color: #555;
}
